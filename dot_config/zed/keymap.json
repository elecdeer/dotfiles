// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "(!menu || (!Editor && !Terminal))",
    "bindings": {
      "ctrl-shift-w ctrl-shift-f": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "right", "focus": true }
      ],
      "ctrl-w ctrl-f": "workspace::ActivatePaneRight",
      "ctrl-shift-w ctrl-shift-b": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "left", "focus": true }
      ],
      "ctrl-w ctrl-b": "workspace::ActivatePaneLeft",
      "ctrl-shift-w ctrl-shift-p": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "up", "focus": true }
      ],
      "ctrl-w ctrl-p": "workspace::ActivatePaneUp",
      "ctrl-shift-w ctrl-shift-n": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "down", "focus": true }
      ],
      "ctrl-w ctrl-n": "workspace::ActivatePaneDown",
      "ctrl-w shift-m": "workspace::ToggleZoom",
      "ctrl-w ctrl-shift-m": "workspace::ToggleZoom"
    }
  },
  {
    "context": "(Editor && (showing_code_actions || showing_completions))",
    "bindings": {
      "ctrl-n": "editor::ContextMenuNext",
      "ctrl-p": "editor::ContextMenuPrevious"
    }
  }
]
