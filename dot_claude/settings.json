{
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(node:*)",
      "Bash(ls:*)",
      "Bash(git:*)",
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(fd:*)",
      "Bash(mv:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(cat:*)",
      "Bash(bat:*)",
      "Bash(echo:*)",
      "Bash(cp:*)",
      "Bash(cd:*)",
      "Bash(tree:*)",
      "Bash(jq:*)",
      "Grep(**)",
      "WebFetch(domain:*)",
      "mcp__context7",
      "mcp__grep"
    ]
  },
  "env": {
    "USE_BUILTIN_RIPGREP": "1",
    "DISABLE_MICROCOMPACT": "1",
    "DISABLE_AUTOUPDATER": "1"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/stop-notification.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/post-tool-use-lint.ts"
          }
        ]
      }
    ]
  }
}
